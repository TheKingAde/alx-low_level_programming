CC=gcc
NAME=school
SRC= main.c school.c
OBJ=$(SRC:.c=.o)
CFLAGS=-Wall -Werror -Wextra -pedantic
RM=rm -f

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $(NAME)

main.o: main.c school.h

school.o: school.c school.h

clean:
	-$(RM) *~ \#*\# *.o
	-$(RM) $(NAME)

oclean:
	-$(RM) *.o

fclean: clean

re: fclean all
